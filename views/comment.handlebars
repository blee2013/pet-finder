<div class="container" id="logoContainer">
    <div class="row">

        <img src="/assets/FureverHomeLogo.png" style="width:100%" alt="Furever Home Logo">
    </div>
    <div class="image-flip">
        <div class="mainflip">
            <div class="frontside">
                <div class="card" style="width:18rem" id="petCard">
                    <img class="card-img-top img-fluid" src="{{pet.picture}}" alt="dog pic">
                    <div class="card-body">
                        <h3>{{pet.name}}</h3>
                        <p class="card-text"></p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="container lg-12">
    <div class="comments">
        {{#each pet.Comments}}
        <div class="card">
            <div class="card-header bg-dark">
            </div>
            <div class="card-body">
                <form>
                    <h4>{{comment_text}} </h4>
                    </br>
                    -{{User.username}} on {{format_date createdAt}}
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{!-- {{#if loggedIn}} --}}
<div class="container lg-12">
    <div class="card">
        <form class="comment-form">
            <div class="card-header bg-dark">
                <h5>Add a comment!</h5>
            </div>
            <div class="card-body">
                <div> <textarea name="comment-body" style="width:100%" placeholder="Comment here!"></textarea>
                    <button class="btn btn-secondary" type="submit">submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

{{!-- {{/if}} --}}

<script src="/javascript/comment.js"></script>